#ifndef BPKG_HELP
#define BPKG_HELP

#include <iosfwd>

#include <bpkg/types>
#include <bpkg/help-options>

namespace bpkg
{
  using usage_function = cli::usage_para (std::ostream&, cli::usage_para);

  int
  help (const help_options&, const string& topic, usage_function* usage);
}

#endif // BPKG_HELP
