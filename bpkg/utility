#ifndef BPKG_UTILITY
#define BPKG_UTILITY

#include <bpkg/types>

namespace bpkg
{
  // Filesystem.
  //
  bool
  exists (const path&);

  bool
  exists (const dir_path&);

  bool
  empty (const dir_path&);

  void
  mk (const dir_path&);

  void
  mk_p (const dir_path&);

  void
  rm_r (const dir_path&, bool dir = true);

  // Process.
  //
  // The process command line is printed for verbosity >= 2 (essential
  // command lines).
  //
  void
  run (const char* const args[]);

  inline void
  run (const cstrings& args) {run (args.data ());}
}

#endif // BPKG_UTILITY
