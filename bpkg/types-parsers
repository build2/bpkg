// CLI parsers, included into the generated source files.
//

#ifndef BPKG_TYPES_PARSERS
#define BPKG_TYPES_PARSERS

#include <bpkg/types>
#include <bpkg/options-types>

namespace bpkg
{
  namespace cli
  {
    class scanner;

    template <typename T>
    struct parser;

    template <>
    struct parser<path>
    {
      static void
      parse (path&, bool&, scanner&);
    };

    template <>
    struct parser<dir_path>
    {
      static void
      parse (dir_path&, bool&, scanner&);
    };

    template <>
    struct parser<auth>
    {
      static void
      parse (auth&, bool&, scanner&);
    };
  }
}

#endif // BPKG_TYPES_PARSERS
