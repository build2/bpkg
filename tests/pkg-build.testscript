          %disfigured foo/1.0.0 \[cfg2.\]%
          %disfigured libbuild2-bar/1.0.0 \[cfg2..bpkg.build2.\]%
          %disfigured libbaz/1.0.0 \[cfg2.\]%
          %fetched libbaz/1.1.0 \[cfg2.\]%
